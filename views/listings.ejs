<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= listing.NAME %> | Housify</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white text-gray-900">

  <!-- Header Include -->
  <%- include('includes/header.ejs') %>

  <!-- Listing Title -->
  <section class="text-center py-6">
    <h1 class="text-4xl font-bold tracking-tight"><%= listing.NAME %></h1>
  </section>

  <!-- Full-Width Listing Image -->
  <section class="w-full h-[50vh] overflow-hidden">
    <img 
      src="<%=listing.IMAGE_URL %>" 
      alt="Listing Image"
      class="w-full h-full object-cover"
    />
  </section>

  <!-- Listing Details -->
  <section class="max-w-5xl mx-auto px-6 py-10 space-y-6">

    <!-- Description -->
    <div>
      <h2 class="text-xl font-semibold mb-2">Description</h2>
      <p class="text-gray-700 leading-relaxed"><%= listing.DESCRIPTION %></p>
    </div>

    <!-- Address Info -->
    <div>
      <h2 class="text-xl font-semibold mb-2">Address</h2>
      <p><strong>Street:</strong> <%= listing.STREET %></p>
      <p><strong>City:</strong> <%= listing.CITY %></p>
      <p><strong>State:</strong> <%= listing.STATE %></p>
      <p><strong>Pincode:</strong> <%= listing.PINCODE %></p>
    </div>

    <!-- Property Specs -->
    <div>
      <h2 class="text-xl font-semibold mb-2">Details</h2>
      <p><strong>Size:</strong> <%= listing.SIZE %> sq ft</p>
      <p><strong>Price per Month:</strong> ₹<%= listing.PRICEPERMONTH %></p>
      <p><strong>Discount:</strong> <%= listing.DISCOUNT %>%</p>
      <p><strong>Rating:</strong> <%= listing.RATING %> ⭐</p>
      <p><strong>Owner:</strong> <a href="<%=baseUrl%>/profile/<%=listing.USER_ID %>"> <%= listing.OWNERNAME %> </a></p>
      <p>
        <strong>Availability:</strong> 
        <% if (listing.AVAILABILITY) { %>
          <span class="text-green-600 font-semibold">Available</span>
          <br>
          <span class="text-blue-600 font-semibold"><a href="<%=baseUrl%>/book/<%=listing.ID %>">Book Now</a></span>
        <% } else { %>
          <span class="text-red-600 font-semibold">Not Available</span>
          <p><strong>Booked By:</strong> <a href="<%=baseUrl%>/profile/<%=bookingUser.USER_ID %>"> <%= bookingUser.NAME %> </a></p>
        <% } %>
      </p>
    </div>

  </section>

  <!-- Reviews Section -->
  <section class="max-w-5xl mx-auto px-6 pb-14">
    <h2 class="text-2xl font-bold mb-4">Reviews</h2>

    <% if (reviews && reviews.length > 0) { %>
      <div class="space-y-4 mb-8">
        <% reviews.forEach(r => { %>
          <div class="border rounded-lg p-4">
            <div class="flex items-center justify-between">
              <div class="font-semibold"><a href="<%=baseUrl%>/profile/<%= r.REVIEWER_ID %>"><%= r.REVIEWER_NAME %></a></div>
              <div class="text-yellow-500">
                <% for (let i = 0; i < r.RATING; i++) { %>⭐<% } %>
              </div>
            </div>
            <p class="mt-2 text-gray-700"><%= r.COMMENT %></p>
            <p class="mt-1 text-xs text-gray-500"><%= new Date(r.CREATED_AT).toLocaleString() %></p>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-600 mb-8">No reviews yet. Be the first to review this property.</p>
    <% } %>

    <% if (user && user.USER_ID && canReview) { %>
      <div class="border rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-3">Leave a Review</h3>
        <form action="<%=baseUrl%>/listing/<%= listing.ID %>/review" method="POST" class="space-y-4">
          <div>
            <label for="rating" class="block text-sm font-medium mb-1">Rating</label>
            <select id="rating" name="rating" required class="border rounded px-3 py-2 w-32">
              <option value="">Select</option>
              <option value="5">★★★★★</option>
              <option value="4">★★★★</option>
              <option value="3">★★★</option>
              <option value="2">★★</option>
              <option value="1">★</option>
            </select>
          </div>
          <div>
            <label for="comment" class="block text-sm font-medium mb-1">Comment</label>
            <textarea id="comment" name="comment" rows="4" required class="w-full border rounded px-3 py-2" placeholder="Share your experience..."></textarea>
          </div>
          <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Submit Review</button>
        </form>
      </div>
    <% } else { %>
      <p class="text-gray-500 text-sm">You must have booked this property to leave a review.</p>
    <% } %>
  </section>

</body>
</html>
